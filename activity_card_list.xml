<?xml version="1.0" encoding="utf-8"?>

  		
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >
    
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_back_btn" />
              <TextView 
                  android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤卡"
            android:layout_centerInParent="true"
            style="@style/text_title_middle"
            android:textStyle="bold"
            />
              
               <ImageButton
            android:id="@+id/bind_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:shadowRadius="1"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_create_album" />

    </RelativeLayout>
       <View 
            android:background="@color/view_title_line"
           android:layout_width="fill_parent" android:layout_height="0.5dp"
         />
    
     
  		
  		 <in.srain.cube.views.ptr.PtrClassicFrameLayout
       
        android:id="@+id/rotate_header_list_view_frame"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="#ffffff"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/bind_card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollbarStyle="outsideOverlay"
            android:paddingBottom="20dp"
            android:choiceMode="singleChoice" />

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    
   
     
       
</LinearLayout>

