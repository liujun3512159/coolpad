<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/activity_title1"
        />

    <RelativeLayout        
        android:id="@+id/themetile_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title_layout"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#ffffff"
         >

        <TextView
            android:id="@+id/theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/et_themeName"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="标题："
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_themeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/theme_name"
            android:hint="最多7个汉字"
            android:maxLength="7"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:textColor="#626262"
            android:textSize="13dp"
            android:drawableEnd="@drawable/m9"
            android:background="@drawable/edit_round_bg" >
        </EditText>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/contentlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/themetile_lay"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        >
      <TextView 
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="内容:"
        android:textSize="20dp"
        android:textColor="#000000"/>
      <TextView 
          android:id="@+id/contexttv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="5dp"
          android:paddingRight="20dp"
          android:text="内容描述"
          android:textColor="#000000"
          />
    </LinearLayout>
    
      <Button
        android:id="@+id/up_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5A220"
        android:text="确定保存"
        android:textColor="#FEF4E8" />
      
    <RelativeLayout 
        android:id="@+id/pagerLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contentlay"
        android:layout_above="@id/up_ok"
        android:background="#D1D2D4"
        >
        <android.support.v4.view.ViewPager
              android:id="@+id/pager"
              android:layout_width="match_parent"
              android:layout_height="match_parent" 
              />

                    <TextView
                        android:id="@+id/num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/class_background_num"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="2dp"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:text="" />
    </RelativeLayout>


  

</RelativeLayout>
